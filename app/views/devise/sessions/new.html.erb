<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-sm-12 col-lg-7 text-center auth--container">
      <p class="auth--text"> Sign in to Your Account </p>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row justify-content-md-center">
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: "form-control" %>
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-sm-10">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: "form-control" %>
          </div>
        </div>

        <div class="row justify-content-md-center">
          <div class="col-sm-10">
            <%= f.submit "Log in", class: 'btn auth--button' %>
          </div>
        </div>
      <% end %>

      <div class="row justify-content-md-center">
        <div class="col-sm-10"> <hr class="auth--alternative"> </div>
      </div>

      <%= render "devise/shared/social_auth_links" %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
